<Window x:Class="WpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Log in" Height="350" Width="600">
    <Canvas>
        <TextBox x:Name="txtUserName" Canvas.Left="54" TextWrapping="Wrap" Canvas.Top="96" Width="212" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.283,1.226"/>
        <TextBlock Canvas.Left="54" TextWrapping="Wrap" Text="Log in" Canvas.Top="27" FontWeight="Bold" FontSize="24"/>
        <TextBlock Canvas.Left="59" TextWrapping="Wrap" Text="Username:" Canvas.Top="64" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" Canvas.Left="54" TextWrapping="Wrap" Canvas.Top="158" Width="212" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Canvas.Left="63" TextWrapping="Wrap" Text="Password:" Canvas.Top="128" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.471,4.179"/>
        <Button Content="Log in" Canvas.Left="54" Canvas.Top="212" Height="31" Width="142" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>

    </Canvas>
</Window>
